@model IEnumerable<StatNav.WebApplication.Models.ExperimentProgramme>

@{
    ViewBag.Title = "Programmes";
}

<h4>Programmes</h4>
@Html.Partial("_ExperimentTypeSelect", Model)
<p>
    @Html.ActionLink("Create New", "Create", "Programme")
</p>
@Html.Partial("_searchBox")
<table class="table">
    <caption>List of Experiment Programmes</caption>
    <tr>
        <th scope="col">
            <a href="@Url.Action("Index",new { sortOrder = ViewBag.IdSortParm })">ID <span class="glyphicon glyphicon-sort"></span></a>
        </th>
        <th scope="col">
            <a href="@Url.Action("Index",new { sortOrder = ViewBag.NameSortParm })">Programme Name <span class="glyphicon glyphicon-sort"></span></a>
        </th>
        <th scope="col">
            <a href="@Url.Action("Index",new { sortOrder = ViewBag.StatusSortParm })">Status <span class="glyphicon glyphicon-sort"></span></a>
        </th>
        <th scope="col">
            @Html.DisplayNameFor(model => model.Problem)
        </th>

    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.ActionLink(item.ProgrammeName, "Details", "Programme", new { id = item.Id }, null)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExperimentStatus.StatusName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Problem)
            </td>

        </tr>
    }

</table>